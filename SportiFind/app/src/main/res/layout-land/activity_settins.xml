<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pic15"
        tools:context="com.app.shopping.SettinsActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#9AAECA">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/close_settings_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close"
                        android:textColor="#493030"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        />

                    <TextView
                        android:id="@+id/update_account_settings_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textColor="#493030"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/settings_profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/app_bar_settings"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="66dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/profile_image_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Profile Picture"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/settings_profile_image"
            android:textColor="#131515"
            android:textColorHint="#EA1313"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/settings_phone_number"
            android:layout_width="389dp"
            android:layout_height="61dp"
            android:layout_below="@+id/profile_image_change_btn"
            android:layout_marginStart="180dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:hint="Phone Number..."
            android:gravity="center"
            android:padding="10dp"
            android:textColorHint="@color/purple_700"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/settings_full_name"
            android:layout_width="396dp"
            android:layout_height="52dp"
            android:layout_below="@+id/settings_phone_number"
            android:layout_marginStart="180dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="15dp"
            android:textColorHint="@color/purple_700"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:hint="Full Name..."
            android:padding="10dp" />

        <EditText
            android:id="@+id/settings_address"
            android:layout_width="384dp"
            android:layout_height="54dp"
            android:textColorHint="@color/purple_700"
            android:textStyle="bold"
            android:layout_below="@+id/settings_full_name"
            android:layout_marginStart="180dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:hint="Address..."
            android:gravity="center"
            android:padding="10dp" />
    </RelativeLayout>
</ScrollView>
